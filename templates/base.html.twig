<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Sortir{% endblock %}</title>
        {%  block csv %}
        {% endblock %}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
            <link rel="icon" href="{{ asset('img/logo.png') }}">
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-light" style="background-color: #e5f4fd;">
                <div id="title">
                    <a href="{{ path('home') }}"><img src="{{ asset('img/logo.png') }}" width="80" height="80" alt="LogoApplication"></a>
                    <h1>Sortir</h1>
                </div>
                <div id="menu">

                    {% if is_granted(['ROLE_USER','ROLE_ADMIN']) %}
                        <a href="{{ path('home') }}">Accueil</a>
                        <a href="{{ path('my_profil')}}">Mon profil</a>
                        <a href="{{ path('groupe') }}"> Faire un groupe</a>
                        <a href="{{ path('inscrireGroupe') }}"> S'inscrire à un groupe</a>
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('csv') }}"> Csv </a>
                        <a href="{{ path('updateEtat') }}"> Etat</a>
                        <a href="{{ path('ville') }}">Villes</a>
                        <a href="{{ path('site') }}">Sites</a>
                        <a href="{{ path('app_register') }}">Inscrire un utilisateur</a>
                    {% endif %}
                </div>
            </nav>
        </header>

            <div class="container-fluid">
                {% block content %}{% endblock %}
            </div>

        <footer>

        </footer>
    </body>
        <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>

</html>
